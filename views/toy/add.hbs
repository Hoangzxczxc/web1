<form action="/toy/add" method="post">
   <h1>Add new toy</h1>
   Toy model: <input type="text" name="model" id="" required>
   <br><br>
   Toy price: <input type="text" name="price" id="" required>
   <br><br>
   Toy image: <input type="url" name="image" id="" required>
   <br><br>
   Toy size:
   <input type="radio" name="size" value="S"> S
   <input type="radio" name="size" value="L"> L
   <input type="radio" name="size" value="XL"> XL
   <input type="radio" name="size" value="XXL"> XXL
   <br><br>
   Toy brand: <br>
   <select name="brand">
      {{#each brands }}
      <option value="{{ _id }}"> {{ name }}</option>
      {{/each}}
   </select>
   <br><br>
   Toy category: <br>
   <select name="category">
      {{#each categories }}
      <option value="{{ _id }}"> {{ name }}</option>
      {{/each}}
   </select>
   <br><br>
   <input type="submit" value="Add">
</form>